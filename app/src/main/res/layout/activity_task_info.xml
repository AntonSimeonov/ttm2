<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_task_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ninja.paranoidandroid.ttm2.TaskInfoActivity">

    <TextView
        android:id="@+id/tv_activity_task_info_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/tv_activity_task_info_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_activity_task_info_name"
        />
    <TextView
        android:id="@+id/tv_activity_task_info_start_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_activity_task_info_description"
        />
    <TextView
        android:id="@+id/tv_activity_task_info_end_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_activity_task_info_start_date"
        />
    <TextView
        android:id="@+id/tv_activity_task_info_budget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_activity_task_info_end_date"
        />
    <TextView
        android:id="@+id/tv_activity_task_info_note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_activity_task_info_budget"
        />
    <TextView
        android:id="@+id/tv_activity_task_info_report"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_activity_task_info_note"
        />
    <TextView
        android:id="@+id/tv_activity_task_info_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_activity_task_info_report"
        />
    <TextView
        android:id="@+id/tv_activity_task_info_priority"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_activity_task_info_status"
        />

</RelativeLayout>
